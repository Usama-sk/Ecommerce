@model DataModels.ViewModels.CategoryVM
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateorUpdate" asp-controller="Category"><i class="bi bi-plus-square"></i>&nbsp;Create New Category</a>
        </div>

    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
        <th>Name</th>
    <th>Description</th>

            <th>Action</th>
        </tr>
</thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                <td role ="group">
                    <a asp-action="CreateorUpdate" asp-controller="Category" asp-route-id="@item.CategoryId"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-Id="@item.CategoryId"><i class="bi bi-trash"></i></a>

                </td>
            </tr>
                }
    </tbody>
</table>